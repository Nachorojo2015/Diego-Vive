---
import Menu from "../icons/Menu.astro";
import Ticket from "../icons/Ticket.astro";
import Close from "../icons/Close.astro";
---

<header
  class="bg-black p-2 z-[500] w-full transition-all duration-300 text-white fixed"
  id="menu"
>
  <nav
    class="flex xl:justify-center items-center xl:gap-[150px] justify-between"
  >
    <a href="/">
      <img src="/logo-DIEGO-VIVE-fondo-degrade.png" alt="" class="w-[150px]" />
    </a>
    <div class="xl:flex items-center gap-10 text-[13px] hidden">
      <a
        href="#home"
        class="text-[#00ff18] transition-all duration-200 hover:text-orange-300 hvr-underline-from-center"
        id="item-menu-1"
        style="font-family: Montserrat, sans-serif"
      >
        HOME
      </a>
      <a
        href="#about"
        class="text-[#3289ff] transition-all duration-200 hover:text-orange-300 hvr-underline-from-center"
        id="item-menu-2"
        style="font-family: Montserrat, sans-serif"
      >
        SU DI NOI
      </a>
      <a
        href="#horarios"
        class="text-[#3289ff] transition-all duration-200 hover:text-orange-300 hvr-underline-from-center"
        id="item-menu-3"
        style="font-family: Montserrat, sans-serif"
      >
        ORARI
      </a>
      <a
        href="#precios"
        class="text-[#3289ff] transition-all duration-200 hover:text-orange-300 hvr-underline-from-center"
        id="item-menu-4"
        style="font-family: Montserrat, sans-serif"
      >
        PREZZI
      </a>
      <a
        href="#informacion"
        class="text-[#3289ff] transition-all duration-200 hover:text-orange-300 hvr-underline-from-center"
        id="item-menu-5"
        style="font-family: Montserrat, sans-serif"
      >
        INFORMAZIONI
      </a>
      <a
        href="#contacto"
        class="text-[#3289ff] transition-all duration-200 hover:text-orange-300 hvr-underline-from-center"
        id="item-menu-7"
        style="font-family: Montserrat, sans-serif"
      >
        CONTATTI
      </a>
      <div
        style="background-image: url('/boton-verde-comprar-entrada.png')"
        class="rounded-full transition-all duration-300 bg-cover"
      >
        <a
          href="https://go2.it/evento/diego-vive/7577"
          class="text-left text-[16px] tracking-wider p-10 block text-black font-[800]"
          id="item-comprar"
          style="font-family: Montserrat, sans-serif"
        >
          ACQUISTARE BIGLIETTO
        </a>
      </div>
    </div>

    {/* Mobile */}
    <div class="xl:hidden flex items-center">
      <div id="button-menu">
        <Menu />
      </div>
      <div
        class="rounded-md text-center py-1 transition-all md:w-full duration-300 bg-[#c8a557] hover:bg-white hover:text-black ml-5"
      >
        <a
          href="https://go2.it/evento/diego-vive/7577"
          class="text-left text-[12px] text-black p-1 block"
          id="item-comprar-mobile-entrada"
        >
          <Ticket />
          <p id="item-comprar-mobile">Acquistare</p>
        </a>
      </div>
    </div>
  </nav>
  <aside
    class="h-screen transition-all duration-300 fixed right-0 top-0 translate-x-[500px] xl:hidden bg-black block w-[60%] z-30 p-3"
    id="menu-mobile"
  >
    <div id="button-close">
      <Close />
    </div>
    <div class="flex flex-col items-center gap-10 text-[13px] text-white mt-20">
      <a
        href="#home"
        class="text-orange-300 transition-all duration-200 hover:text-orange-300"
        id="item-menu-mobile-1"
      >
        HOME
      </a>
      <a
        href="#about"
        class="transition-all duration-200 hover:text-orange-300"
        id="item-menu-mobile-2"
      >
      SU DI NOI
      </a>
      <a
        href="#horarios"
        class="transition-all duration-200 hover:text-orange-300"
        id="item-menu-mobile-3"
      >
      ORARI
      </a>
      <a
        href="#precios"
        class="transition-all duration-200 hover:text-orange-300"
        id="item-menu-mobile-4"
      >
      PREZZI
      </a>
      <a
        href="#informacion"
        class="transition-all duration-200 hover:text-orange-300"
        id="item-menu-mobile-5"
      >
      INFORMAZIONI
      </a>
      <a
        href="#contacto"
        class="transition-all duration-200 hover:text-orange-300"
        id="item-menu-mobile-6"
      >
      CONTATTI
      </a>
    </div>
  </aside>
</header>

<style>
  .hvr-underline-from-center {
    display: inline-block;
    vertical-align: middle;
    -webkit-transform: perspective(1px) translateZ(0);
    transform: perspective(1px) translateZ(0);
    box-shadow: 0 0 1px rgba(0, 0, 0, 0);
    position: relative;
    overflow: hidden;
  }
  .hvr-underline-from-center:before {
    content: "";
    position: absolute;
    z-index: -1;
    left: 51%;
    right: 51%;
    bottom: 0;
    background: #4abaee;
    height: 1px;
    -webkit-transition-property: left, right;
    transition-property: left, right;
    -webkit-transition-duration: 0.3s;
    transition-duration: 0.3s;
    -webkit-transition-timing-function: ease-out;
    transition-timing-function: ease-out;
  }
  .hvr-underline-from-center:hover:before,
  .hvr-underline-from-center:focus:before,
  .hvr-underline-from-center:active:before {
    left: 0;
    right: 0;
  }
</style>

<script>
  // Menu mobile. Abrir
  const buttonMenu = document.getElementById("button-menu");
  buttonMenu.addEventListener("click", () => {
    document
      .getElementById("menu-mobile")
      .classList.remove("translate-x-[500px]");
    document.body.classList.add("overflow-hidden");
  });
  // Menu mobile. Cerrar
  const buttonMenuClose = document.getElementById("button-close");
  buttonMenuClose.addEventListener("click", () => {
    document.getElementById("menu-mobile").classList.add("translate-x-[500px]");
    document.body.classList.remove("overflow-hidden");
  });

  // -------------------

  // Links del Menu mobile
  const itemMenuMobile1 = document.getElementById("item-menu-mobile-1");
  const itemMenuMobile2 = document.getElementById("item-menu-mobile-2");
  const itemMenuMobile3 = document.getElementById("item-menu-mobile-3");
  const itemMenuMobile4 = document.getElementById("item-menu-mobile-4");
  const itemMenuMobile5 = document.getElementById("item-menu-mobile-5");
  const itemMenuMobile6 = document.getElementById("item-menu-mobile-6");


  // Efecto cerrar menu mobile cuando se presiona un link
  itemMenuMobile1.addEventListener("click", () => {
    document.getElementById("menu-mobile").classList.add("translate-x-[500px]");
    document.body.classList.remove("overflow-hidden");
  });
  itemMenuMobile2.addEventListener("click", () => {
    document.getElementById("menu-mobile").classList.add("translate-x-[500px]");
    document.body.classList.remove("overflow-hidden");
  });
  itemMenuMobile3.addEventListener("click", () => {
    document.getElementById("menu-mobile").classList.add("translate-x-[500px]");
    document.body.classList.remove("overflow-hidden");
  });
  itemMenuMobile4.addEventListener("click", () => {
    document.getElementById("menu-mobile").classList.add("translate-x-[500px]");
    document.body.classList.remove("overflow-hidden");
  });
  itemMenuMobile5.addEventListener("click", () => {
    document.getElementById("menu-mobile").classList.add("translate-x-[500px]");
    document.body.classList.remove("overflow-hidden");
  });
  itemMenuMobile6.addEventListener("click", () => {
    document.getElementById("menu-mobile").classList.add("translate-x-[500px]");
    document.body.classList.remove("overflow-hidden");
  });
</script>
