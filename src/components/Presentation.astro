<style>
  /* Efecto de flip / giro para la imagen de diego principal */
  @keyframes flip {
    0% {
      transform: rotateY(0deg);
    }
    10% {
      transform: rotateY(0deg);
    }
    20% {
      transform: rotateY(0deg);
    }
    50% {
      transform: rotateY(180deg);
    }
    75% {
      transform: rotateY(180deg);
    }
    80% {
      transform: rotateY(180deg);
    }
    90% {
      transform: rotateY(290deg);
    }
